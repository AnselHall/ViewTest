<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ll_itemroot"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:orientation="horizontal"
    >


    <ImageView
        android:id="@+id/iv_item_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上班"
            android:textColor="#555"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="09:00"
            android:textColor="#555"
            android:textSize="15sp"
            />
    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginRight="20dp"
        android:layout_weight="2">

        <Button
            android:id="@+id/btn_item_registrition"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#FF8200"
            android:text="签到"
            android:textColor="#fff"
            android:textSize="18sp"
            android:visibility="visible"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_item_reason"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_launcher"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/tv_item_state"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="已签到 13:00"
                android:textColor="#555"
                android:textSize="18sp"
                android:visibility="invisible"
                />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
